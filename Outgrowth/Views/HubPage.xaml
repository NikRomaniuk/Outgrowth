<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Outgrowth.ViewModels"
             x:Class="Outgrowth.Views.HubPage"
             x:DataType="viewModels:HubViewModel">
    
    <Grid   ColumnDefinitions="Auto,*,Auto"
            x:Name="MainGrid">
        
        <!-- Layer 1: Background (spans all columns) -->
        <BoxView Grid.ColumnSpan="3" Color="#0A0E1A" />
        
        <!-- Left Gutter: Placeholder for navigation buttons (created dynamically) -->
        <AbsoluteLayout Grid.Column="0"
                       x:Name="LeftGutterPlaceholder"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       BackgroundColor="Transparent"
                       WidthRequest="300"
                       HeightRequest="500"
                       Margin="20,0,0,0"
                       InputTransparent="True"
                       ZIndex="1000"/>
        
        <!-- Center Column: Environment (16:9 Aspect Ratio, Centered, Scaled by Height) -->
        <ContentView x:Name="EnvironmentWrapper"
                     Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Fill">
            
            <!-- Environment container with 16:9 aspect ratio - scales based on screen height -->
            <!-- Container width: 1920 pixels (19.2 * 100) for coordinate system -100 to 100 -->
            <!-- Container height: 1080 pixels (10.8 * 100) for coordinate system -100 to 100 -->
            <!-- Station objects (Market, Quest Console, Statistics) are created dynamically in code-behind -->
            <AbsoluteLayout x:Name="EnvironmentContainer"
                           WidthRequest="1920"
                           HeightRequest="1080"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill">
            
            </AbsoluteLayout>
        </ContentView>
        
        <!-- Right Gutter: Placeholder for navigation buttons (created dynamically) -->
        <AbsoluteLayout Grid.Column="2"
                       x:Name="RightGutterPlaceholder"
                       HorizontalOptions="End"
                       VerticalOptions="Fill"
                       BackgroundColor="Transparent"
                       WidthRequest="300"
                       HeightRequest="500"
                       Margin="0,0,20,0"
                       InputTransparent="True"
                       ZIndex="1000"/>
        
        <!-- Overlay Panels (Initially Hidden) - Created dynamically in code-behind -->
        <!-- Panels are created as StyledPanel type "scroll" instances and added to MainGrid at runtime -->
        <!-- Panel placeholders are managed programmatically for Market, Quest, and Stats panels -->
        
        <!-- Fade Overlay for Android Navigation Transitions -->
        <BoxView x:Name="FadeOverlay"
                 Grid.ColumnSpan="3"
                 Color="Black"
                 Opacity="0"
                 IsVisible="False"
                 ZIndex="10000"
                 InputTransparent="True"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 Margin="-10"/>
        
    </Grid>
    
</ContentPage>

