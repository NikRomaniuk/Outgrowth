<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Outgrowth.MainPage"
             Title="Main Menu"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid>
        <!-- Background gradient effect -->
        <BoxView Color="#0A0E1A" />
        
        <ScrollView>
            <VerticalStackLayout Padding="{OnPlatform Android='20', Default='40'}" 
                                Spacing="{OnPlatform Android=15, Default=30}"
                                VerticalOptions="Center"
                                HorizontalOptions="Center">
                
                <!-- Game Title -->
                <VerticalStackLayout Spacing="{OnPlatform Android=5, Default=10}" 
                                    Margin="{OnPlatform Android='0,0,0,20', Default='0,0,0,50'}">
                    <Label Text="🌱 OUTGROWTH"
                           FontSize="{OnPlatform Android=32, Default=48}"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"/>
                    
                    <Label Text="A Space Botanical Simulator"
                           FontSize="{OnPlatform Android=12, Default=16}"
                           HorizontalOptions="Center"
                           Opacity="0.7"
                           TextColor="White"/>
                </VerticalStackLayout>
                
                <!-- Menu Buttons -->
                <VerticalStackLayout Spacing="{OnPlatform Android=10, Default=15}" 
                                    MinimumWidthRequest="{OnPlatform Android=250, Default=300}">
                    
                    <Button Text="🚀 Start New Game"
                            Clicked="OnNewGameClicked"
                            FontSize="{OnPlatform Android=14, Default=18}"
                            Padding="{OnPlatform Android='10,12', Default='15'}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="10"/>
                    
                    <Button x:Name="ContinueButton"
                            Text="📡 Continue Mission"
                            Clicked="OnContinueClicked"
                            FontSize="{OnPlatform Android=14, Default=18}"
                            Padding="{OnPlatform Android='10,12', Default='15'}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="10"
                            IsEnabled="False"
                            Opacity="0.5"/>
                    
                    <Button Text="⚙️ Settings"
                            Clicked="OnSettingsClicked"
                            FontSize="{OnPlatform Android=14, Default=18}"
                            Padding="{OnPlatform Android='10,12', Default='15'}"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            CornerRadius="10"/>
                    
                    <Button Text="❌ Exit"
                            Clicked="OnExitClicked"
                            FontSize="{OnPlatform Android=14, Default=18}"
                            Padding="{OnPlatform Android='10,12', Default='15'}"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            CornerRadius="10"
                            Margin="{OnPlatform Android='0,10,0,0', Default='0,20,0,0'}"/>
                </VerticalStackLayout>
                
                <!-- Version Info -->
                <Label Text="Version 0.1.0 - Development Build"
                       FontSize="{OnPlatform Android=10, Default=12}"
                       HorizontalOptions="Center"
                       Opacity="0.5"
                       Margin="{OnPlatform Android='0,15,0,0', Default='0,30,0,0'}"
                       TextColor="White"/>
                
                <!-- Credits -->
                <Label Text="Created by Nik Romaniuk"
                       FontSize="{OnPlatform Android=10, Default=12}"
                       HorizontalOptions="Center"
                       Opacity="0.5"
                       TextColor="White"/>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
